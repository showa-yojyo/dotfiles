# .gitconfig

[core]
    autocrlf = input
    excludesFile = ~/.gitignore
    editor = 'D:/Program Files/xyzzy/xyzzy.exe'

[alias]
    br = branch

    type = cat-file -t
    dump = cat-file -p

    co = checkout

    cp = cherry-pick

    ci = commit
    carn = commit --amend --reset-author --no-edit

    lasttag = describe --tags --abbrev=0

    df = diff
    dc = diff --cached
    dlc = diff --cached HEAD^
    wdiff = diff --color-words

    gr = grep -I

    ls = log --pretty=format:'%C(auto)%h%d %s %C(bold blue)[%cn]' --decorate
    lds = log --pretty=format:'%C(auto)%h %ad%d %s %C(bold blue)[%cn]' --decorate --date=short
    ll = log --pretty=format:'%C(auto)%h%d %s %C(bold blue)[%cn]' --decorate --numstat
    hist = log --pretty=format:'%C(auto)%h%d %s %C(bold blue)[%cn]' --graph --date=short
    dl = "!git ll -1"
    lnc = log --pretty=format:'%h %s [%cn]' # WITHOUT COLOR
    le = log --oneline --decorate
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    fl = log -u
    lc = log ORIG_HEAD.. --stat --no-merges
    lg = log -p

    who = shortlog -s --

    st = status #-s
    stat = status

[branch]
    autoSetupRebase = always

[browser "default-browser"]
    cmd = cygstart

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[color]
    ui = auto

[diff]
    tool = tortoisediff

[difftool "tortoisediff"]
    cmd = 'C:/Program Files/TortoiseGIT/bin/TortoiseGitMerge.exe' -mine:\"$REMOTE\" -base:\"$LOCAL\"

[difftool]
    prompt = false

[help]
    browser = default-browser
    format = html

[merge]
    tool = tortoisemerge

[mergetool "tortoisemerge"]
    cmd = 'C:/Program Files/TortoiseGit/bin/TortoiseGitMerge.exe' -base:\"$BASE\" -theirs:\"$REMOTE\" -mine:\"$LOCAL\" -merged:\"$MERGED\"

[mergetool]
    keepBackup = false
    prompt = false

[push]
    default = current

