# .gitconfig
[include]
    path = ~/.gitconfig.user # authentication, e.g. signingKey

[alias]
    alias = ! git config --get-regexp ^alias\\.\n | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /\n | sort -k1

    br = branch
    ci = commit
    df = diff
    re = restore
    stat = status
    sw = switch

    type = cat-file -t
    dump = cat-file -p

    carn = commit --amend --reset-author --no-edit

    lasttag = describe --tags --abbrev=0

    dc = diff --cached
    dlc = diff --cached HEAD^
    wdiff = diff --color-words

    gr = grep -I

    ls = log --pretty=format:'%C(auto)%h%d %s %C(bold blue)[%cn]' --decorate
    lds = log --pretty=format:'%C(auto)%h %ad%d %s %C(bold blue)[%cn]' --decorate --date=iso
    ll = log --pretty=format:'%C(auto)%h%d %s %C(bold blue)[%cn]' --decorate --numstat
    hist = log --pretty=format:'%C(auto)%h%d %s %C(bold blue)[%cn]' --graph --date=iso
    dl = "!git ll -1"
    lnc = log --pretty=format:'%h %s [%cn]' # WITHOUT COLOR
    le = log --oneline --decorate
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    fl = log -u
    lc = log ORIG_HEAD.. --stat --no-merges
    lg = log -p
    lfu = log --pretty=fuller

    who = shortlog -s --

    st = status -sb

[branch]
    autoSetupRebase = always

[browser "default-browser"]
    cmd = wslview

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[color]
    ui = auto

[commit]
    gpgsign = true

[core]
    autocrlf = input
    editor = code --wait
    fileMode = true

[diff]
    tool = vscode

[difftool]
    prompt = false

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[gpg]
    format = ssh

[gui]
    encoding = utf-8
    tabsize = 4

[help]
    browser = default-browser
    format = man

[init]
    defaultBranch = main

[mailmap]
    file = ~/.config/git/mailmap

[merge]
    tool = vscode

[mergetool]
    keepBackup = false
    prompt = false

[mergetool "vscode"]
    cmd = code --wait $MERGED

[pull]
    ff = only

[push]
    default = current

[web]
    browser = default-browser
